<h1>Rooms</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Number</th>
      <th>Room Type</th>
      <th>Price</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.room_type %></td>
        <td><%= number_to_currency(room.price) %></td>
        <td><%= room.status %></td>
        <td><%= link_to 'Details', room_path(room), class: 'btn btn-primary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
